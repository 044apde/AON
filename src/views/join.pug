doctype html
html(lang="ko")
    head  
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible' content='IE=edge')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
        title 회원가입
    
    body 
        if errorMessage
            span=errorMessage
        form(method = "POST")
            input(placeholder="이름 입력", name="name", type="text", required)
            input(placeholder="이메일", name="email", type="email", required)
            input(placeholder="비밀번호 입력", name="password", type="password", required)
            input(placeholder="비밀번호 확인", name="password2", type="password", required)
            input(type="submit", value="회원가입")